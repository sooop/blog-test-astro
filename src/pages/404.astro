---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404" currentPath="/404">
  <div class="max-w-5xl mx-auto px-6 py-32 md:py-48">
    <div class="border-t border-border pt-8">
      <!-- Error Code - Small and functional -->
      <p class="text-xs text-muted-foreground tracking-widest uppercase mb-8">
        Error 404
      </p>

      <!-- Main Message -->
      <h1 class="font-serif text-4xl md:text-5xl lg:text-6xl leading-tight mb-12 text-foreground max-w-3xl">
        Page not found
      </h1>

      <!-- Description -->
      <p class="text-lg md:text-xl text-muted-foreground leading-relaxed mb-16 max-w-2xl">
        The page you are looking for does not exist.
      </p>

      <!-- Actions - Minimal text links -->
      <div class="flex flex-col sm:flex-row gap-8">
        <a
          href="/"
          class="text-sm text-foreground hover:text-accent transition-colors"
        >
          Return home
        </a>
        <a
          href="/blog"
          class="text-sm text-muted-foreground hover:text-foreground transition-colors"
        >
          Browse articles
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
